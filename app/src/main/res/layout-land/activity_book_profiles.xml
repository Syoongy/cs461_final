<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:context=".BookProfilesActivity">

    <fragment
        android:id="@+id/bookProfilesFragment"
        android:name="com.example.myapplication.BookProfiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_book_profiles" />

    <fragment
        android:id="@+id/bookDetailsFragment"
        android:name="com.example.myapplication.DetailedProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_detailed_profile" />

</LinearLayout>