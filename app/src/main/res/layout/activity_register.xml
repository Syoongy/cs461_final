<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="36sp"
        android:paddingBottom="36sp"
        android:text="Register to the Language Learning Application"
        android:textSize="34sp" />


    <EditText
        android:id="@+id/newUsernameTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6sp"
        android:height="48dp"
        android:ems="10"
        android:hint="Enter you username"
        android:inputType="text" />

    <EditText
        android:id="@+id/newPwTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6sp"
        android:height="48dp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pwConfirmTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6sp"
        android:height="48dp"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerNewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register" />

</LinearLayout>